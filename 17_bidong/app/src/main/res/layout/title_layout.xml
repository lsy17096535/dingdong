<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_title_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/subject_color" >
    
    <ImageView 
        android:id="@+id/image_title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_ban_back"
        android:background="@null"
        />

    <TextView 
        android:id="@+id/txt_title_title"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        style="@style/white_18_text"
        android:gravity="center_vertical"
        android:layout_centerInParent="true"
        />
    
    <ImageView 
        android:id="@+id/image_title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_ban_add"
        android:layout_alignParentRight="true"
		android:paddingRight="3dp"
		android:visibility="gone"
        />
    
    <TextView 
        android:id="@+id/txt_title_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
		style="@style/white_15_text"
		android:text="确定"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_marginRight="5dp"
		android:visibility="gone"
        />
    
</RelativeLayout>
