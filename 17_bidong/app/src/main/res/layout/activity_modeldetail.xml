<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/image_modeldetail_bk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_loading"
        android:alpha="0.9"/>

    <RelativeLayout
        android:id="@+id/layout_modeldetail_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/login_normal"
        >
        <ImageView
            android:id="@+id/image_modeldetail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_ban_back"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/white_20_text"
            android:text="演艺资料"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_modeldetail_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#7f000000"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_modeldetail_contact"
            style="@style/white_15_text"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_login"
            android:text="@string/common_contact" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/layout_modeldetail_title"
        android:layout_above="@id/layout_modeldetail_bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_modeldetail_avatar"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="14dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/txt_modeldetail_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/white_15_text"
                            android:text="某某某"/>

                        <TextView
                            android:id="@+id/txt_modeldetail_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/white_13_text"
                            android:text="某某某"
                            android:layout_marginLeft="7dp"/>

                        <TextView
                            android:id="@+id/txt_modeldetail_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/white_13_text"
                            android:text="某某某"
                            android:layout_marginLeft="9dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/image_modeldetail_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ico_femalelv1"/>
                        <TextView
                            android:id="@+id/txt_modeldetail_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/white_13_text"
                            android:text="某某某"
                            android:layout_marginLeft="7dp"/>
                    </LinearLayout>
                </LinearLayout>
                
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="#7f000000"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/white_15_text"
                    android:text="基本资料"/>

                <LinearLayout
                    style="@style/white_horizon_divider"
                    android:layout_marginTop="10dp"></LinearLayout>
                <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:id="@+id/layout_modeldetail_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_widthPercent="18.5%"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/txt_modeldetail_height"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/white_13_text"
                            android:text="175cm"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/white_13_text"
                            android:layout_marginTop="13dp"
                            android:text="身高"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_modeldetail_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_widthPercent="18.5%"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_toRightOf="@id/layout_modeldetail_1"
                        >
                        <TextView
                            android:id="@+id/txt_modeldetail_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/white_13_text"
                            android:text="52kg"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/white_13_text"
                            android:layout_marginTop="13dp"
                            android:text="体重"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_modeldetail_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_widthPercent="18.5%"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_toRightOf="@id/layout_modeldetail_2"
                        >
                        <TextView
                            android:id="@+id/txt_modeldetail_shoesize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/white_13_text"
                            android:text="38"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/white_13_text"
                            android:layout_marginTop="13dp"
                            android:text="鞋码"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_modeldetail_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_widthPercent="26%"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_toRightOf="@id/layout_modeldetail_3"
                        >
                        <TextView
                            android:id="@+id/txt_modeldetail_bodyinfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/white_13_text"
                            android:text="120-50-120"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/white_13_text"
                            android:layout_marginTop="13dp"
                            android:text="三围"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_modeldetail_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_widthPercent="18.5%"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_toRightOf="@id/layout_modeldetail_4"
                        android:visibility="gone"
                        >
                        <TextView
                            android:id="@+id/txt_modeldetail_cupsize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/white_13_text"
                            android:text="B CUP"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/white_13_text"
                            android:layout_marginTop="13dp"
                            android:text="罩杯"/>
                    </LinearLayout>
                </android.support.percent.PercentRelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="#7f000000"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/white_15_text"
                    android:text="服务范围/报价"/>


                <LinearLayout
                    style="@style/white_horizon_divider"
                    android:layout_marginTop="10dp"></LinearLayout>

                <TextView
                    android:id="@+id/txt_modeldetail_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/white_13_text"
                    android:text="111"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="#7f000000"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/white_15_text"
                android:text="演艺作品"/>

            <LinearLayout
                style="@style/white_horizon_divider"
                android:layout_marginTop="10dp"></LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:id="@+id/layout_modeldetail_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"></LinearLayout>
            </HorizontalScrollView>
            
        </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
