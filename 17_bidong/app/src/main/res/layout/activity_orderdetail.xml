<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bk_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/horizon_gray_divider"
            android:layout_marginTop="10dp" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/layout_bg_color_white"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/image_orderdetail_itemicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:minHeight="66dp"
                android:minWidth="66dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_orderdetail_itemname"
                    style="@style/lightred_15_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="享美食" />

                <TextView
                    style="@style/lightred_13_text"
                    android:id="@+id/txt_orderdetail_itemprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="100元/小时" />
            </LinearLayout>

            <TextView
                style="@style/gray_13_text"
                android:id="@+id/txt_orderdetail_ctime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="1小时前" />

            <LinearLayout style="@style/horizon_gray_divider" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/horizon_gray_divider"
            android:layout_marginTop="10dp" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_orderdetail_user"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/layout_bg_color_white"
            android:padding="10dp" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_orderdetail_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@drawable/navigation_me" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/image_orderdetail_avatar"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_orderdetail_username"
                        style="@style/black_15_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1111"  />
                    <TextView
                        android:id="@+id/txt_orderdetail_age"
                        style="@style/white_10_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="1111"
                        />
                    <TextView
                        android:id="@+id/txt_orderdetail_occup"
                        style="@style/white_10_text"
                        android:background="@color/text_bg_color_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="模特"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_orderdetail_addr"
                    style="@style/gray_13_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:text="西湖区" />
            </LinearLayout>
            <ImageView
                android:id="@+id/image_orderdetail_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_arrow_grey" />

            <TextView
                style="@style/gray_13_text"
                android:id="@+id/txt_orderdetail_userdis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/image_orderdetail_arrow"
                android:layout_toRightOf="@id/image_orderdetail_avatar"
                android:gravity="right"
                android:text="1km"/>
        </RelativeLayout>
        <LinearLayout style="@style/horizon_gray_divider" >
        </LinearLayout>

        <LinearLayout
            style="@style/horizon_gray_divider"
            android:layout_marginTop="10dp" >
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/layout_bg_color_white"
            android:padding="10dp">

            <TextView
                style="@style/text_15_8c8c8c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="约定时间"/>
            <TextView
                style="@style/text_15_999999"
                android:id="@+id/txt_orderdetail_otime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="5月6日"/>
        </RelativeLayout>
        <LinearLayout style="@style/horizon_gray_divider" >
        </LinearLayout>

        <LinearLayout
            style="@style/horizon_gray_divider"
            android:layout_marginTop="10dp" >
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/layout_bg_color_white"
            android:padding="10dp">

            <TextView
                style="@style/text_15_8c8c8c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="诚意礼物"/>

            <ImageView
                android:id="@+id/image_orderdetail_gifticon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight = "true"
                android:src="@drawable/ease_default_avatar"/>

            <TextView
                style="@style/text_15_999999"
                android:id="@+id/txt_orderdetail_giftprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/image_orderdetail_gifticon"
                android:layout_marginRight="5dp"
                android:text="3金币"/>

        </RelativeLayout>

        <LinearLayout
            style="@style/horizon_gray_divider"
            android:layout_marginTop="10dp" >
        </LinearLayout>

        <TextView
            style="@style/text_15_999999"
            android:id="@+id/txt_orderdetail_descr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/layout_bg_color_white"
            android:maxLines="6"
            android:padding="10dp"
            android:text="请准时，活好另外加钱"/>

        <LinearLayout style="@style/horizon_gray_divider" >
        </LinearLayout>

        <LinearLayout
            style="@style/horizon_gray_divider"
            android:layout_marginTop="10dp" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_orderdetail_cost"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/layout_bg_color_white"
            android:padding="10dp"
            android:visibility="gone">

            <TextView
                style="@style/text_15_8c8c8c"
                android:id="@+id/label_orderdetail_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出场费"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
                <TextView
                    style="@style/lightred_15_text"
                    android:id="@+id/txt_orderdetail_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0"/>
                <EditText
                    android:id="@+id/edit_orderdetail_cost"
                    style="@style/lightred_15_text"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:background="@drawable/input_bk"
                    android:cursorVisible="true"
                    android:text="0"
                    android:textCursorDrawable="@drawable/cursor_bk"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="5"
                    android:visibility="gone"/>
                <TextView
                    style="@style/text_15_999999"
                    android:id="@+id/txt_orderdetail_cost_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="金币"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout style="@style/horizon_gray_divider" >
        </LinearLayout>

        <TextView
            style="@style/text_13_f28790"
            android:id="@+id/label_orderdetail_prompt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="@string/order_receive_prompt"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_orderdetail_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/selector_accept"
                android:minWidth="135dp"
                android:text="@string/common_accept"
                android:textColor="@drawable/text_accept" />

            <Button
                android:id="@+id/btn_orderdetail_refuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:background="@drawable/selector_refuse"
                android:minWidth="135dp"
                android:text="@string/common_refuse"
                android:textColor="@drawable/text_refuse" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_orderdetail_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:visibility="invisible">
            <ImageView
                android:id="@+id/image_orderdetail_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checkbox_selector"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_13_999999"
                android:layout_marginLeft="10dp"
                android:text="分享到微信朋友圈，晒晒我的魅力"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>