<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp" 
    android:background="#ffffff">
    <com.intexh.bidong.widgets.FixImageView
		android:id="@+id/image_hotvideo_snapshot"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" 
		app:fiximage_ratio="0.75"   
		android:background="#000000" 
        />
	
    <RelativeLayout 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center"
		android:padding="5dp"
        >
        <LinearLayout 
            android:id="@+id/layout_hotvideo_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:gravity="center"
            >
            <ImageView 
                android:id="@+id/image_hotvideo_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_comment"
                />
            <TextView 
                android:id="@+id/txt_hotvideo_commentcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/white_13_text"
                android:text="111"
                />
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/layout_hotvideo_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_toRightOf="@id/layout_hotvideo_one"
            android:layout_marginLeft="3dp"
            >
            <ImageView 
                android:id="@+id/image_hotvideo_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_video"
                />
            <TextView 
                android:id="@+id/txt_hotvideo_videocount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/white_13_text"
                android:text="111"
                />
        </LinearLayout>
        <TextView 
            android:id="@+id/txt_hotvideo_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/white_13_text"
            android:layout_alignParentRight="true"
            android:text="111"
            />
        
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@id/image_hotvideo_snapshot"
        android:padding="5dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView 
            android:id="@+id/image_hotvideo_avatar"
	        android:layout_width="35dp"
	        android:layout_height="35dp"
	        />
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	        android:layout_marginLeft="5dp"
	        >
	        <TextView 
	            android:id="@+id/txt_hotvideo_itemtitle"
	            style="@style/white_15_text"
	            android:text="111"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:singleLine="true"
	            />
	        <TextView 
	            android:id="@+id/txt_hotvideo_itemsign"
	            style="@style/white_15_text"
	            android:text="222"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="3dp"
	            android:layout_alignParentBottom="true"
	            android:singleLine="true"
	            />
	    </RelativeLayout>
    </LinearLayout>
    
</RelativeLayout>
