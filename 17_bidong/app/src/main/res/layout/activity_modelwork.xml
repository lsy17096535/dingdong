<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bk_color"
    android:orientation="vertical">

    <LinearLayout
        style="@style/horizon_gray_divider"
        android:layout_marginTop="10dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            >
            <EditText
                android:id="@+id/edit_modelwork_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/black_15_text"
                android:hint="请对作品图片进行说明"
                android:text=""
                android:background="@null"
                android:cursorVisible="true"
                android:textColorHint="#999999"
                android:textCursorDrawable="@drawable/cursor_bk"
                android:maxLength="32"
                 />
        </LinearLayout>

        <LinearLayout
            style="@style/horizon_gray_divider"></LinearLayout>

        <com.intexh.bidong.widgets.RealHeightRecylerView
            android:id="@+id/recyler_modelwork_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.intexh.bidong.widgets.RealHeightRecylerView>

    </LinearLayout>


</LinearLayout>
