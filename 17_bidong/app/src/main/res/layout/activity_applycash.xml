<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bk_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingBottom="30dp" >

        <TextView
            style="@style/black_15_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:text="@string/gift_chargeaccounttips" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_applycash_value"
                style="@style/text_25_f51c4b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/text_13_f51c4b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout style="@style/horizon_gray_divider" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_white_bk" >
        <EditText
            android:id="@+id/edit_applycash_count"
            style="@style/black_15_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:cursorVisible="true"
            android:gravity="center"
            android:hint="@string/applycash_hint"
            android:inputType="number"
            android:textColorHint="#999999"
            android:maxLength="10"
            android:textCursorDrawable="@drawable/cursor_bk" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/input_white_bk" >
        <EditText
            android:id="@+id/edit_card_number"
            style="@style/black_15_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:cursorVisible="true"
            android:gravity="center"
            android:hint="请输入支付宝账号"
            android:inputType="number"
            android:textColorHint="#999999"
            android:textCursorDrawable="@drawable/cursor_bk" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/input_white_bk" >
        <EditText
            android:id="@+id/edit_card_user"
            style="@style/black_15_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:cursorVisible="true"
            android:gravity="center"
            android:hint="请输入支付宝账户姓名"
            android:textColorHint="#999999"
            android:textCursorDrawable="@drawable/cursor_bk" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="1dp"
        android:visibility="gone"
        android:background="@drawable/input_white_bk" >
        <EditText
            android:id="@+id/edit_bank_name"
            style="@style/black_15_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:cursorVisible="true"
            android:gravity="center"
            android:hint="请输入收款银行"
            android:textColorHint="#999999"
            android:textCursorDrawable="@drawable/cursor_bk" />
    </LinearLayout>

    <TextView
        style="@style/text_13_f51c4b"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/applycash_tips" />

    <TextView
        android:id="@+id/txt_applycash_tips"
        style="@style/text_13_999999"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="提现手续费将从余额扣除，实际到账金额为30%（含税）" />

    <Button
        android:id="@+id/btn_applycash_commit"
        style="@style/white_15_text"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_login"
        android:text="@string/common_commit" />

    <TextView
        style="@style/text_13_999999"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/applycahs_tips3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp">
        <ImageView
            android:id="@+id/image_applycash_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/checkbox_selector"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_13_999999"
            android:layout_marginLeft="10dp"
            android:text="分享到微信朋友圈，晒晒送我的战绩"/>
    </LinearLayout>

</LinearLayout>