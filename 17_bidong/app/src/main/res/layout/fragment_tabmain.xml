<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/subject_color">

    <RelativeLayout
        android:id="@+id/layout_tabmain_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_ban_back"
            android:background="@null"
            />
        <com.shizhefei.view.indicator.FixedIndicatorView
            android:id="@+id/fragment_tabmain_indicator"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/fragment_tabmain_right"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/add"
            android:visibility="visible"/>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_tabmain_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>