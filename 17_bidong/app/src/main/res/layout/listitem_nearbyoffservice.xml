<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_nearoffservice_main"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:paddingTop="15dp"
        >

        <ImageView
            android:id="@+id/image_nearoffservice_avatar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            />

        <LinearLayout
            android:id="@+id/llt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_nearoffservice_avatar"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:paddingRight="10dp"
            android:layout_toLeftOf="@+id/address_llt"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txt_nearoffservice_username"
                    style="@style/black_15_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1111"  />
                <TextView
                    android:id="@+id/txt_nearoffservice_age"
                    style="@style/white_10_text"
                    android:layout_width="29dp"
                    android:layout_height="14dp"
                    android:paddingLeft="3dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="1111"
                    />
                <TextView
                    style="@style/white_10_text"
                    android:id="@+id/txt_nearoffservice_occup"
                    android:background="#FFB486"
                    android:layout_width="29dp"
                    android:layout_height="14dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="模特"/>
            </LinearLayout>
            <TextView
                style="@style/red_13_text"
                android:id="@+id/txt_nearoffservice_itemnameprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:text="按摩 100元/小时"/>
            <TextView
                android:id="@+id/txt_nearoffservice_descr"
                style="@style/text_13_666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxLength="17"
                android:layout_marginTop="7dp"
                android:textSize="12sp"
                android:ellipsize="end"
                android:text="非诚勿扰"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/image_nearoffservice_itemicon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight = "true"
            android:layout_marginTop="12dp"
            android:src="@drawable/ease_default_avatar"/>

        <LinearLayout
            android:id="@+id/address_llt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="17dp"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:id="@+id/txt_nearoffservice_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/darkgray_13_text"
                android:textSize="11sp"
                android:text="10m"/>
            <TextView
                android:id="@+id/txt_nearoffservice_useraddr"
                style="@style/gray_13_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:singleLine="true"
                android:text="1111" />

            <TextView
                android:id="@+id/txt_nearoffservice_userdis"
                style="@style/gray_13_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="11sp"
                android:text="1111"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/image_nearoffservice_disticon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/icon_sitepin" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dddddd"
            android:layout_alignLeft="@+id/llt1"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</LinearLayout>