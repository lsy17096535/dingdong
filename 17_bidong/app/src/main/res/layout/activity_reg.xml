<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bk_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout style="@style/gray_horizon_divider" >
        </LinearLayout>

        <EditText
            android:id="@+id/edit_reg_mobile"
            style="@style/text_15_6e6e6e"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:textColorHint="#b8b8b8"
            android:inputType="phone"
            android:textCursorDrawable="@drawable/cursor_bk" />

        <LinearLayout style="@style/gray_horizon_divider" >
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/btn_reg_varify"
                style="@style/white_15_text"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:background="@color/themeColor"
                android:gravity="center"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:singleLine="true"
                android:text="获取验证码" />

            <EditText
                android:id="@+id/edit_reg_varify"
                style="@style/text_15_6e6e6e"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="12dp"
                android:layout_toLeftOf="@id/btn_reg_varify"
                android:background="@null"
                android:cursorVisible="true"
                android:hint="请输入验证码"
                android:textColorHint="#b8b8b8"
                android:inputType="number"
                android:textCursorDrawable="@drawable/cursor_bk" />
        </RelativeLayout>

        <LinearLayout style="@style/gray_horizon_divider" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_reg_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/image_reg_eye_ckeck"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:src="@drawable/selector_eye" />

            <EditText
                android:id="@+id/edit_reg_password"
                style="@style/text_15_6e6e6e"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="12dp"
                android:layout_toLeftOf="@id/image_reg_eye_ckeck"
                android:background="@null"
                android:cursorVisible="true"
                android:hint="@string/password_hint"
                android:textColorHint="#b8b8b8"
                android:inputType="textPassword"
                android:textCursorDrawable="@drawable/cursor_bk" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/divider_reg_password"
            style="@style/gray_horizon_divider"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_invite_code"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout style="@style/gray_horizon_divider" >
        </LinearLayout>

        <EditText
            android:id="@+id/edit_invite_code"
            style="@style/text_15_6e6e6e"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:hint="请输入邀请码,如果有"
            android:textColorHint="#b8b8b8"
            android:inputType="phone"
            android:textCursorDrawable="@drawable/cursor_bk" />

        <LinearLayout style="@style/gray_horizon_divider" >
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_reg_next"
        style="@style/white_15_text"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_login"
        android:gravity="center"
        android:text="@string/reg_next" />

    <LinearLayout
        android:id="@+id/layout_reg_license"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image_reg_license_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_license" />

        <TextView
            style="@style/darkgray_13_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="@string/reg_licensepre" />

        <TextView
            android:id="@+id/txt_reg_license"
            style="@style/lightred_13_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_license" />
    </LinearLayout>

</LinearLayout>