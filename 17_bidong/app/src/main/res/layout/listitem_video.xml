<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="#ffffff"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <com.intexh.bidong.widgets.FixImageView
        android:id="@+id/image_videoitem_snapshot"
        android:layout_width="75dp"
        android:layout_height="150dp"
        app:fiximage_ratio="0.8"
        android:background="#000000"
        android:layout_centerVertical="true"
        />
        <ImageView 
            android:id="@+id/image_videoitem_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow_grey"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            />
        
        <LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/image_videoitem_snapshot"
			android:layout_toLeftOf="@id/image_videoitem_arrow"
			android:layout_marginLeft="10dp"
			android:orientation="vertical"
            >
            <TextView 
                android:id="@+id/txt_videoitem_username"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/text_13_666666"
				android:text="1111"
                />
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                >
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_comment_grey"
                    />
                <TextView 
                    android:id="@+id/txt_videoitem_commentcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="10dp"
                    style="@style/text_10_808080"
                    android:text="1111"
                    />
                
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_video_grey"
                    />
                <TextView 
                    android:id="@+id/txt_videoitem_playcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    style="@style/text_10_808080"
                    android:text="1111"
                    />
            </LinearLayout>
            <TextView 
                android:id="@+id/txt_videoitem_time"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/text_10_989898"
				android:layout_marginTop="10dp"
				android:text="1111"
                />
        </LinearLayout>
    </RelativeLayout>
    
    <LinearLayout 
        style="@style/horizon_gray_divider"
        ></LinearLayout>

</LinearLayout>
