<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/main_bk_color">
    <LinearLayout
        style="@style/horizon_gray_divider"
        android:layout_marginTop="14dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:background="#ffffff">
            <TextView
                android:id="@+id/txt_modelinfo_tip1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_15_8c8c8c"
                android:text="胸围"/>

            <TextView
                android:id="@+id/txt_modelinfo_unit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_15_8c8c8c"
                android:text=" cm"
                android:layout_alignParentRight="true"/>
            <EditText
                android:id="@+id/edit_modelinfo_xiongwei"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="right"
                style="@style/black_15_text"
                android:background="@null"
                android:cursorVisible="true"
                android:text="111"
                android:textColorHint="#999999"
                android:textCursorDrawable="@drawable/cursor_bk"
                android:inputType="number"
                android:maxLength="3"
                android:layout_toRightOf="@id/txt_modelinfo_tip1"
                android:layout_toLeftOf="@id/txt_modelinfo_unit1"/>

        </RelativeLayout>

        <LinearLayout
            style="@style/horizon_gray_divider"
            android:layout_marginLeft="14dp"></LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:background="#ffffff">
            <TextView
                android:id="@+id/txt_modelinfo_tip2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_15_8c8c8c"
                android:text="腰围"/>

            <TextView
                android:id="@+id/txt_modelinfo_unit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_15_8c8c8c"
                android:text=" cm"
                android:layout_alignParentRight="true"/>
            <EditText
                android:id="@+id/edit_modelinfo_yaowei"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="right"
                style="@style/black_15_text"
                android:background="@null"
                android:cursorVisible="true"
                android:text="111"
                android:textColorHint="#999999"
                android:textCursorDrawable="@drawable/cursor_bk"
                android:inputType="number"
                android:maxLength="3"
                android:layout_toRightOf="@id/txt_modelinfo_tip2"
                android:layout_toLeftOf="@id/txt_modelinfo_unit2"/>

        </RelativeLayout>

        <LinearLayout
            style="@style/horizon_gray_divider"
            android:layout_marginLeft="14dp"></LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:background="#ffffff">
            <TextView
                android:id="@+id/txt_modelinfo_tip3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_15_8c8c8c"
                android:text="臀围"/>

            <TextView
                android:id="@+id/txt_modelinfo_unit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_15_8c8c8c"
                android:text=" cm"
                android:layout_alignParentRight="true"/>
            <EditText
                android:id="@+id/edit_modelinfo_tunwei"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="right"
                style="@style/black_15_text"
                android:background="@null"
                android:cursorVisible="true"
                android:text="111"
                android:textColorHint="#999999"
                android:textCursorDrawable="@drawable/cursor_bk"
                android:inputType="number"
                android:maxLength="3"
                android:layout_toRightOf="@id/txt_modelinfo_tip3"
                android:layout_toLeftOf="@id/txt_modelinfo_unit3"/>

        </RelativeLayout>

        <LinearLayout
            style="@style/horizon_gray_divider"
            android:layout_marginLeft="14dp"></LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:background="#ffffff">
            <TextView
                android:id="@+id/txt_modelinfo_tip4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_15_8c8c8c"
                android:text="鞋码"/>

            <TextView
                android:id="@+id/txt_modelinfo_unit4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_15_8c8c8c"
                android:text=" 码"
                android:layout_alignParentRight="true"/>
            <EditText
                android:id="@+id/edit_modelinfo_shoesize"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="right"
                style="@style/black_15_text"
                android:background="@null"
                android:cursorVisible="true"
                android:text="111"
                android:textColorHint="#999999"
                android:textCursorDrawable="@drawable/cursor_bk"
                android:inputType="number"
                android:maxLength="2"
                android:layout_toRightOf="@id/txt_modelinfo_tip4"
                android:layout_toLeftOf="@id/txt_modelinfo_unit4"/>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/layout_modelinfo_cupsize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/horizon_gray_divider"
                android:layout_marginLeft="14dp"></LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:background="#ffffff">
                <TextView
                    android:id="@+id/txt_modelinfo_tip8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_15_8c8c8c"
                    android:text="罩杯"/>

                <TextView
                    android:id="@+id/txt_modelinfo_cupsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/black_15_text"
                    android:text=" 码"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/horizon_gray_divider"
            android:layout_marginLeft="14dp"></LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:background="#ffffff">
            <TextView
                android:id="@+id/txt_modelinfo_tip5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_15_8c8c8c"
                android:text="国家"/>

            <EditText
                android:id="@+id/edit_modelinfo_country"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/black_15_text"
                android:text="中国"
                android:layout_toRightOf="@id/txt_modelinfo_tip5"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:cursorVisible="true"
                android:textColorHint="#999999"
                android:textCursorDrawable="@drawable/cursor_bk"
                android:maxLength="16"
                android:gravity="right"/>

        </RelativeLayout>

        <LinearLayout
            style="@style/horizon_gray_divider"
            android:layout_marginLeft="14dp"></LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_modelinfo_serviceinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:background="#ffffff">
            <TextView
                android:id="@+id/txt_modelinfo_tip6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_15_8c8c8c"
                android:text="服务范围/报价"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|right"
                android:layout_toRightOf="@id/txt_modelinfo_tip6"
                >

                <TextView
                    android:id="@+id/txt_modelinfo_serviceinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/black_15_text"
                    android:text="服务范围/报价"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_arrow_grey"/>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            style="@style/horizon_gray_divider"
            ></LinearLayout>


    </LinearLayout>

    <LinearLayout
        style="@style/horizon_gray_divider"
        android:layout_marginTop="14dp"
        ></LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_modelinfo_works"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="14dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:background="#ffffff">
        <TextView
            android:id="@+id/txt_modelinfo_tip7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_15_8c8c8c"
            android:text="演艺作品"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:layout_toRightOf="@id/txt_modelinfo_tip7"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_photo"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_grey"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        style="@style/horizon_gray_divider"
        android:layout_marginTop="14dp"
        ></LinearLayout>
</LinearLayout>
