<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/layout_bg_color_white">

    <LinearLayout style="@style/horizon_gray_divider" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/txt_offserv_filter_tips"
            style="@style/text_15_8c8c8c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/common_select_item" />

        <ImageView
            android:id="@+id/image_offserv_items_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_closed" />
    </RelativeLayout>

    <LinearLayout
        style="@style/horizon_gray_divider"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <GridView
        android:id="@+id/gridview_yuema_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:numColumns="4"
        android:verticalSpacing="3dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:background="@color/layout_bg_color_white"/>

    <LinearLayout
        style="@style/horizon_gray_divider"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <Button
            android:id="@+id/btn_yuema_all_find"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/selector_refuse"
            android:minWidth="135dp"
            android:text="@string/common_find_all"
            android:textColor="@drawable/text_refuse" />
    </LinearLayout>
    <LinearLayout style="@style/horizon_gray_divider"></LinearLayout>
</LinearLayout>
