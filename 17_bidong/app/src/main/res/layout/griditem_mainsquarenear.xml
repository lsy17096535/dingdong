<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="#ffffff">

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<com.intexh.bidong.widgets.FixImageView
			android:id="@+id/image_mainsquare_nearitem_avatar"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="fitXY"
			app:fiximage_ratio="0.6"
			android:padding="0dp"/>
		<ImageView
			android:id="@+id/image_mainsquare_nearitem_paly"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_gravity="right|bottom"
			android:layout_marginBottom="10dp"
			android:layout_marginRight="10dp"
			android:src="@drawable/video_picplay"
			android:visibility="gone"/>
	</FrameLayout>


	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    android:layout_alignBottom="@id/image_mainsquare_nearitem_avatar"
	    android:padding="5dp">

		<TextView
			android:id="@+id/txt_mainsquare_nearitem_name"
			style="@style/black_15_text"
			android:text="立国"
			android:maxLength="5"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			/>

		<ImageView
			android:id="@+id/image_mainsquare_nearitem_gender"
			android:layout_width="12dp"
			android:layout_height="12dp"
			android:layout_marginTop="3dp"
			android:layout_marginLeft="10dp"
			android:layout_toRightOf="@id/txt_mainsquare_nearitem_name"
			android:src="@drawable/icon_male"/>

		<TextView
			android:id="@+id/txt_mainsquare_nearitem_age"
			style="@style/gray_13_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="3dp"
			android:layout_toRightOf="@+id/image_mainsquare_nearitem_gender"
			android:text="29"
			/>
		<TextView
			android:id="@+id/txt_mainsquare_nearitem_distance"
			style="@style/gray_13_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/txt_mainsquare_nearitem_name"
			android:layout_marginTop="5dp"
			android:layout_alignParentRight="true"
			android:text="3km"
			/>

		<TextView
			android:id="@+id/txt_mainsquare_nearitem_sign"
			style="@style/gray_13_text"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/txt_mainsquare_nearitem_name"
			android:layout_marginTop="5dp"
			android:layout_marginRight="30dp"
			android:singleLine="true"
			android:layout_toLeftOf="@+id/txt_mainsquare_nearitem_distance"
			android:text="跟随内心 实践梦想"
			/>

	</RelativeLayout>
	
</LinearLayout>
