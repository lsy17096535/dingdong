<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/main_bk_color">
    
    <LinearLayout 
        style="@style/horizon_gray_divider"
        android:layout_marginTop="14dp"
        ></LinearLayout>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="14dp"
        >
        <TextView 
            android:id="@+id/txt_commoninput_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_15_8c8c8c"
            android:text="昵称"
            android:layout_centerVertical="true"
            />
        <EditText 
            android:id="@+id/edit_commoninput_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/black_15_text"
            android:layout_toRightOf="@id/txt_commoninput_tips"
            android:background="@null"
            android:cursorVisible="true"
			android:textCursorDrawable="@drawable/cursor_bk"
			android:gravity="right"
			android:layout_marginLeft="14dp"
			android:layout_centerVertical="true"
            />
        
    </RelativeLayout>
    
    <LinearLayout 
        style="@style/horizon_gray_divider"
        ></LinearLayout>

</LinearLayout>
