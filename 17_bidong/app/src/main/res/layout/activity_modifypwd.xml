<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bk_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout style="@style/gray_horizon_divider" >
        </LinearLayout>

        <EditText
            android:id="@+id/edit_modifypwd_oldpwd"
            style="@style/darkgray_15_text"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:hint="旧密码"
            android:password="true"
            android:maxLength="16"
            android:textColorHint="#b8b8b8"
            android:textCursorDrawable="@drawable/cursor_bk" />

        <LinearLayout
            style="@style/gray_horizon_divider"
            android:layout_marginLeft="12dp" />
        
         <EditText
            android:id="@+id/edit_modifypwd_pwd"
            style="@style/darkgray_15_text"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:hint="新密码"
            android:password="true"
            android:maxLength="16"
            android:textColorHint="#b8b8b8"
            android:textCursorDrawable="@drawable/cursor_bk" />
         
         <LinearLayout
            style="@style/gray_horizon_divider"
            android:layout_marginLeft="12dp" />
         
         <EditText
            android:id="@+id/edit_modifypwd_confirmpwd"
            style="@style/darkgray_15_text"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:hint="确认新密码"
            android:password="true"
            android:maxLength="16"
            android:textColorHint="#b8b8b8"
            android:textCursorDrawable="@drawable/cursor_bk" />
         
         <LinearLayout
            style="@style/gray_horizon_divider"
            />
            
    </LinearLayout>

</LinearLayout>