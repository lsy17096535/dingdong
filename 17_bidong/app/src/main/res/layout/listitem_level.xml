<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.percent.PercentRelativeLayout
    android:id="@+id/layout_itemlevel_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >
    <TextView
        android:id="@+id/txt_itemlevel_level"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_weight="1.0"
        style="@style/text_13_999999"
        android:text="111111"
        android:gravity="center"
        app:layout_widthPercent="30%"
        />
    
    <LinearLayout
        android:id="@+id/layout_itemlevel_center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_widthPercent="30%"
        android:layout_toRightOf="@id/txt_itemlevel_level"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|left"
        >
       <ImageView 
           android:id="@+id/image_itemlevel_icon"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ico_femalelv1"
           />
    </LinearLayout>
    
    <TextView 
        android:id="@+id/txt_itemlevel_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        style="@style/text_13_999999"
        app:layout_widthPercent="40%"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/layout_itemlevel_center"
        android:text="1111"
        />

</android.support.percent.PercentRelativeLayout>

<LinearLayout
    style="@style/horizon_gray_divider"
    ></LinearLayout>

</LinearLayout>
