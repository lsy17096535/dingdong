<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="12dp" >

        <ImageView
            android:id="@+id/image_chargeitem_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_diamondsgift" />

        <Button
            android:id="@+id/btn_chargeitem_charge"
            style="@style/text_13_f51c4b"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_charge"
            android:minWidth="50dp"
            android:text="1111" />

        <LinearLayout
            android:id="@+id/layout_charge_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/image_chargeitem_icon"
            android:orientation="vertical" 
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/txt_chargeitem_price"
                style="@style/black_15_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_charge_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/layout_charge_info"
            android:visibility="invisible"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_10_989898"
                android:text="送"/>
            <TextView
                android:id="@+id/txt_badge_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/menu_red"
                android:textSize="12sp"
                android:text="xxx"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_10_989898"
                android:text="徽章"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout style="@style/horizon_gray_divider" 
        android:layout_marginLeft="15dp">
    </LinearLayout>

</LinearLayout>